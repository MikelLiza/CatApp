%h1 Table of all Cats

%table
  %thead
    %tr
      %th Name
      %th Breed
      %th Age
      %th Owner email

  %tbody
    - @cats.each_with_index do |cat, i|
      -row_class = ""
      -if i % 2 == 0
        - row_class = "even"
      -else
        - row_class = "odd"

      %tr
        %td{:class => "#{row_class} plain"}= cat.name
        %td{:class => "#{row_class} plain"}= cat.breed
        %td{:class => "#{row_class} plain"}= cat.age
        %td{:class => "#{row_class} plain"}= cat.owner_email

%br

= link_to 'New cat', new_cat_path

%input#plainb{onclick: "SetTableStyle('Plain')", type: "button", value: "Plain"}
%input#brightb{onclick: "SetTableStyle('Bright')", type: "button", value: "Bright"}
